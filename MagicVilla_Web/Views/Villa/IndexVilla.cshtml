@using MagicVilla_Web.Models.Dto;
@model IEnumerable<VillaDto>
@{
    ViewData["Title"] = "IndexVilla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de villas</h1>

        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="CrearVilla" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Crear Nueva Villa </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Ocupantes</th>
                <th>Tarifas</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Nombre
                    </td>
                    <td>
                        @item.Ocupantes
                    </td>
                    <td>
                        @(item.Tarifa.ToString("c"))
                    </td>
                    <td>
                        <a asp-controller="Villa" asp-action="ActualizarVilla" class="btn btn-outline-success" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Villa" asp-action="RemoverVilla" class="btn btn-outline-danger" asp-route-id="@item.Id"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

