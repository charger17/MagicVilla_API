@using MagicVilla_Web.Models.Dto;
@model IEnumerable<NumeroVillaDto>
@{
    ViewData["Title"] = "Numerovilla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Numero villa</h1>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de villas</h1>

        </div>
        <div class="col text-end pt-1">
            <a asp-controller="NumeroVilla" asp-action="CrearNumeroVilla" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Crear Nuevo Numero de Villa </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre de la Villa</th>
                <th>Numero de villa</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Villa.Nombre
                    </td>
                    <td>
                        @item.VillaNo
                    </td>
                    <td>
                        <a asp-controller="NumeroVilla" asp-action="ActualizarNumeroVilla" class="btn btn-outline-success" asp-route-villaNo="@item.VillaNo"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="NumeroVilla" asp-action="RemoverNumeroVilla" class="btn btn-outline-danger" asp-route-villaNo="@item.VillaNo"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

